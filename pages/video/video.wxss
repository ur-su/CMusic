/* pages/video/video.wxss */

.videoContainer .header {
  display: flex;
  /* justify-content: space-between; */
  padding: 10rpx;
}

.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  border: 1rpx solid #eee;
  /* flex-grow可拉伸，flex-shrink：可收缩，flex-basis自身的宽度 */
  /* flex:flex-grow:0,flex-shrink:1,flex-basis:auto */
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #d43c33;
}


/* 导航区域 */

.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}

.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}

.navScroll .navContent {
  height: 60rpx;
  box-sizing: border-box;
}

.navItem .active {
  border-bottom: 6rpx solid #d43c33;
}


/* 视频列表 */

.videoScroll {
  margin-top: 20rpx;
  /* calc可以动态计算css的宽高 */
  height: calc(100vh - 120rpx);
}

.videoItem {
  padding: 10rpx 3%;
}


/* .videoItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
} */

.videoItem .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


/* footer */

.footer {
  /* border-top: 1rpx solid #eee; */
  border-bottom: 10rpx solid #eee;
  padding: 20rpx 0rpx;
}

.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}